{
  "manifest_version": 2,
  "name": "Native Message Sender",
  "version": "1.0",

  "description": "Sends a message to a native application.",

  "icons": {
    "128": "icons/native-host-control-128.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "native_message_sender@example.com"
    }
  },
  "background": {
    "scripts": ["dist/background.js"]
  },
  "browser_action": {
    "default_icon": "icons/native-host-control-128.png",
    "default_title": "Native Host Control",
    "default_popup": "dist/popup/popup.html"
  },
  "permissions": ["nativeMessaging"]
} 