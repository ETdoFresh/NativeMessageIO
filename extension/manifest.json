{
  "manifest_version": 3,
  "name": "Native Message Listener",
  "version": "1.0",
  "description": "Listens for a message from a native app and displays it.",
  "icons": {
    "48": "icons/border-48.png"
  },
  "permissions": [
    "nativeMessaging",
    "notifications"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "action": {
    "default_icon": "icons/border-48.png",
    "default_title": "Show Native Message"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "native-message-io@etdofresh.com"
    }
  }
} 